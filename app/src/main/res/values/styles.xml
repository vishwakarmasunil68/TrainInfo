<resources>

    <style name="AppTheme" parent="AppTheme.Base"></style>

    <style name="AppTheme.Base" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="editTextStyleProperty" parent="@android:style/Widget.EditText">
        <item name="android:textColor">#424242</item>
        <item name="android:textColorHint">#757575</item>
        <item name="backgroundTint">@color/colorAccent</item>
    </style>

    <style name="customButton" parent="Widget.AppCompat.Button">
        <item name="android:textColor">#424242</item>
        <!--<item name="backgroundTint">@color/colorAccent</item>-->
        <item name="android:background">#d6d7d7</item>
    </style>



    <style name="CustomScrollbar">
        <item name="android:scrollbarThumbVertical">@android:color/transparent</item>
    </style>

    <style name="AppCompatAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/colorAccent2</item>
        <item name="android:textColorPrimary">#000000</item>
        <item name="android:background">#FFFFFF</item>
    </style>
</resources>
